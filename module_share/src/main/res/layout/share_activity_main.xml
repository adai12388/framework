<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <com.flyco.tablayout.SlidingTabLayout
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/share_slidingTabLayout"
        app:tl_indicator_width="@dimen/dp_10"
        app:tl_indicator_gravity="BOTTOM"
        app:tl_indicator_color="@color/colorPrimary"
        app:tl_textUnselectColor="@color/black"
        app:tl_textSelectColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_35"></com.flyco.tablayout.SlidingTabLayout>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/qmui_config_color_gray_5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/share_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>